@model ConfigurationModel
@{
    Layout = "_AdminLayout";
    //page title
    ViewBag.Title = string.Format("{0} / {1}", T("Nop.Cypher.Misc.MJSTraders.Admin.Configuration.Page.Title").Text, T("Nop.Cypher.Misc.MJSTraders.Title").Text);
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Cypher.MJSTraders.Configure");
}

<form asp-controller="MJSTraders" asp-action="Configure" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Nop.Cypher.Misc.MJSTraders.Admin.Configuration.Title") - @T("Nop.Cypher.Misc.MJSTraders.Title")
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>
    <div asp-validation-summary="All"></div>
    @await Html.PartialAsync("_CreateOrUpdate.cshtml", Model)
</form>